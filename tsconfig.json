{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2020",
		"lib": ["ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"allowJs": true,
		"noEmit": true,
		"types": ["node"]
	},
	"include": ["**/*.js", "**/*.json", "admin/**/*.d.ts"],
	"exclude": ["node_modules/**", "test/**", "admin/**/*.json", "admin/**/*.js", "enpalAPI.js", "enpalAPI_test.js"]
}
